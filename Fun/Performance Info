javascript:(function(){if(window.performance){var timing=window.performance.timing;var loadTime=timing.loadEventEnd-timing.navigationStart;var dnsTime=timing.domainLookupEnd-timing.domainLookupStart;var connectionTime=timing.connectEnd-timing.connectStart;var serverResponseTime=timing.responseStart-timing.requestStart;var pageRenderTime=timing.domComplete-timing.domLoading;var message='Page Load Time: '+loadTime+' ms\n'+'DNS Time: '+dnsTime+' ms\n'+'Connection Time: '+connectionTime+' ms\n'+'Server Response Time: '+serverResponseTime+' ms\n'+'Page Render Time: '+pageRenderTime+' ms';var performanceDisplay=document.createElement("div");performanceDisplay.style.position="fixed";performanceDisplay.style.top="10px";performanceDisplay.style.left="10px";performanceDisplay.style.backgroundColor="white";performanceDisplay.style.color="black";performanceDisplay.style.padding="10px";performanceDisplay.style.border="2px solid black";performanceDisplay.style.fontWeight="bold";performanceDisplay.style.fontSize="12px";performanceDisplay.textContent=message;var byWatermelonVR=document.createElement("div");byWatermelonVR.style.position="fixed";byWatermelonVR.style.top="calc(10px + 2em + 20px)";byWatermelonVR.style.left="10px";byWatermelonVR.style.backgroundColor="white";byWatermelonVR.style.padding="10px";byWatermelonVR.style.border="2px solid black";byWatermelonVR.style.fontWeight="bold";byWatermelonVR.style.fontSize="12px";var colors=["red","orange","yellow","green","blue","indigo","violet"];var currentIndex=0;setInterval(function(){byWatermelonVR.style.color=colors[currentIndex];currentIndex=(currentIndex+1)%colors.length;},500);byWatermelonVR.textContent="By WatermelonVR";var bodyElement=document.body;if(bodyElement){bodyElement.appendChild(performanceDisplay);bodyElement.appendChild(byWatermelonVR);}else{alert('Could not find body element.');}}else{alert('Performance API is not supported in this browser.');}})();
